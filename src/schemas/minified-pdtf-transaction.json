{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/Property-Data-Trust-Framework/schemas/master/src/schemas/minified-pdtf-transaction.json",
  "type": "object",
  "title": "Property Data Trust Framework Transaction Schema",
  "description": "A schema defining minimal elements of the PDTF transaction data structure.",
  "required": [
    "$schema",
    "transactionId",
    "status",
    "uprn",
    "createdAt",
    "updatedAt"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "transactionId": {
      "title": "UUID for the transaction",
      "type": "string",
      "format": "uuid"
    },
    "status": {
      "type": "string",
      "enum": ["active", "cancelled", "completed"]
    },
    "uprn": {
      "type": "integer"
    },
    "createdAt": {
      "type": "integer"
    },
    "updatedAt": {
      "type": "integer"
    }
  }
}
