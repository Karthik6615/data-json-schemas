{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://homebuyingandsellinggroup.co.uk/schemas/pdtf-transaction.json",
  "type": "object",
  "title": "Property Data Trust Framework Transaction Schema",
  "description": "A schema defining the PDTF transaction data structure, supporting mapping to BASPI, Law Society and RICS Data Schema elements.",
  "required": [
    "$schema",
    "transactionId",
    "status",
    "participants",
    "propertyPack"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "transactionId": {
      "title": "UUID for the transaction",
      "type": "string",
      "format": "uuid"
    },
    "status": {
      "type": "string",
      "enum": ["active", "cancelled", "completed"]
    },
    "participants": {
      "title": "Transaction participants",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "title": "Participant Details",
        "required": ["name", "email", "role"],
        "properties": {
          "name": {
            "title": "",
            "type": "object",
            "required": ["forenames", "surname"],
            "properties": {
              "forenames": {
                "title": "Forenames",
                "type": "string"
              },
              "preferredName": {
                "title": "Preferred name / known as",
                "type": "string"
              },
              "surname": {
                "title": "Surname",
                "type": "string"
              }
            }
          },
          "dateOfBirth": {
            "title": "Date of birth",
            "type": "string",
            "format": "date"
          },
          "phone": {
            "title": "Phone number",
            "type": "string"
          },
          "email": {
            "title": "Email address",
            "type": "string",
            "format": "email"
          },
          "address": {
            "title": "Address",
            "$ref": "#/$defs/address"
          },
          "organisation": {
            "title": "Organisation",
            "type": "string"
          },
          "organisationReference": {
            "title": "Reference",
            "type": "string"
          },
          "role": {
            "title": "Role",
            "type": "string",
            "enum": [
              "Seller",
              "Seller's Conveyancer",
              "Prospective Buyer",
              "Buyer",
              "Buyer's Conveyancer",
              "Estate Agent"
            ]
          }
        }
      }
    },
    "propertyPack": {
      "title": "Property Pack",
      "type": "object",
      "properties": {
        "materialFacts": {
          "$ref": "https://raw.githubusercontent.com/Property-Data-Trust-Framework/schemas/master/src/schemas/baspi-a-material-facts.json"
        },
        "additionalLegalInfo": {
          "$ref": "https://github.com/Property-Data-Trust-Framework/schemas/blob/master/src/schemas/baspi-b-legal-information.json"
        },
        "titlesToBeSold": {
          "RDSRef": "",
          "title": "Title(s) as registered with HMLR which are included in the sale",
          "type": "array",
          "items": {
            "type": "object",
            "title": "Registered Title",
            "properties": {
              "titleNumber": {
                "RDSRef": "",
                "title": "Title Number",
                "type": "string"
              },
              "titleExtents": {
                "RDSRef": "",
                "title": "Title Extents",
                "description": "One or more index polygons describing indicative location of registered title from National Polygon Dataset",
                "type": "array",
                "items": {
                  "$ref": "https://geojson.org/schema/GeoJSON.json"
                }
              },
              "registerExtract": {
                "title": "HMLR Register Extract",
                "$ref": "https://homebuyingandsellinggroup.co.uk/schemas/title-deed.json"
              }
            }
          }
        },
        "energyPerformanceCertificate": {
          "RDSRef": "",
          "title": "Energy Performance Certificate",
          "$ref": "https://homebuyingandsellinggroup.co.uk/schemas/energy-performance-certificate.json"
        },
        "risks": {
          "RDSRef": "",
          "title": "Risks",
          "type": "object",
          "properties": {
            "coalMining": {
              "title": "Coal mining",
              "$ref": "#/$defs/riskIndicatorAndSearch"
            },
            "flood": {
              "title": "Flood",
              "$ref": "#/$defs/riskIndicatorAndSearch"
            },
            "miningAndGroundStability": {
              "title": "Mining and ground stability",
              "type": "object",
              "properties": {
                "bathStone": {
                  "title": "Bath Stone",
                  "$ref": "#/$defs/riskIndicatorAndSearch"
                },
                "metalliferousTin": {
                  "title": "Matalliferous (Tin)",
                  "$ref": "#/$defs/riskIndicatorAndSearch"
                },
                "kaolinAndBallClay": {
                  "title": "Kaolin and ball clay",
                  "$ref": "#/$defs/riskIndicatorAndSearch"
                },
                "limestone": {
                  "title": "Limestone",
                  "$ref": "#/$defs/riskIndicatorAndSearch"
                },
                "brine": {
                  "title": "Brine",
                  "$ref": "#/$defs/riskIndicatorAndSearch"
                },
                "groundStability": {
                  "title": "Ground stability",
                  "$ref": "#/$defs/riskIndicatorAndSearch"
                },
                "nonCoalMining": {
                  "title": "Non coal mining",
                  "$ref": "#/$defs/riskIndicatorAndSearch"
                },
                "groundMovement": {
                  "title": "Ground movement",
                  "$ref": "#/$defs/riskIndicatorAndSearch"
                },
                "mineral": {
                  "title": "Mineral",
                  "$ref": "#/$defs/riskIndicatorAndSearch"
                }
              }
            },
            "energyAndInfrastructure": {
              "title": "Energy and infrastructure",
              "type": "object",
              "properties": {
                "hs2": {
                  "title": "HS2",
                  "$ref": "#/$defs/riskIndicatorAndSearch"
                },
                "crossrail": {
                  "title": "Crossrail",
                  "$ref": "#/$defs/riskIndicatorAndSearch"
                },
                "londonUnderground": {
                  "title": "London Underground",
                  "$ref": "#/$defs/riskIndicatorAndSearch"
                },
                "energyExploration": {
                  "title": "Energy exploration",
                  "$ref": "#/$defs/riskIndicatorAndSearch"
                },
                "windFarms": {
                  "title": "Wind farms",
                  "$ref": "#/$defs/riskIndicatorAndSearch"
                },
                "solarFarms": {
                  "title": "Solar farms",
                  "$ref": "#/$defs/riskIndicatorAndSearch"
                },
                "renewablePowerPlants": {
                  "title": "Renewable power plants",
                  "$ref": "#/$defs/riskIndicatorAndSearch"
                }
              }
            }
          }
        }
      }
    }
  },
  "$defs": {
    "address": {
      "type": "object",
      "properties": {
        "address1": {
          "title": "Address 1",
          "type": "string",
          "minLength": 1
        },
        "address2": {
          "title": "Address 2",
          "type": "string"
        },
        "town": {
          "title": "Town",
          "type": "string"
        },
        "county": {
          "title": "County",
          "type": "string"
        },
        "postcode": {
          "title": "Postcode",
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["address1", "postcode"]
    },
    "riskIndicatorAndSearch": {
      "type": "object",
      "properties": {
        "hasRisk": {
          "title": "",
          "type": "string",
          "enum": ["Yes", "No"]
        }
      },
      "required": ["address1", "postcode"]
    }
  }
}
